<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
      <div class="mx-auto">


      <h5 class="text-dark bg-light py-4 mb-0">ログイン</h5>

      <%= form_with model: @user, url: user_session_path do |f| %>
      <div class="field">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード" %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
      <% end %>

      <div class="actions">
        <%= f.submit "サインイン", class: "btn btn-outline-success" %>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>

      </div>
    </div>
  </div>
</div>