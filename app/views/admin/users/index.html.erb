<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>アカウント一覧</h2>

        <table class="table table-striped">
        　<thead>
            <tr>
              <th>ユーザー名</th>
              <th>メールアドレス</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td><%= link_to '削除', admin_user_path(user.id), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-outline-danger" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

    </div>
  </div>
</div>
