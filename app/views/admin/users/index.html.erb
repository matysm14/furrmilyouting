<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>アカウント一覧</h2>

        <table class="table table-striped">
        　<thead>
            <tr>
              <th>ユーザー名</th>
              <th>メールアドレス</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td><%= user.withdraw ? "退会済み" : nil %></td>
                <% unless @user.withdraw %>
                  <td><%= button_to "削除", withdraw_admin_user_path(@user), method: :patch, data: { confirm: '本当に削除しますか？' }, class: "btn btn-outline-danger" %></td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>

    </div>
  </div>
</div>
