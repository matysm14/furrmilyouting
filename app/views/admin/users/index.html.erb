<div class="container">
  <div class="row">
    <div class="col-md-12 mt-4">
      <h2>アカウント一覧</h2>

        <table class="table">
        　<thead class= "table-info">
            <tr>
              <th>ユーザー名</th>
              <th>メールアドレス</th>
              <th>ステータス</th>
            </tr>
          </thead>

          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <% if user.is_valid %>
                  <td><%= button_to "削除", withdraw_admin_user_path(user), method: :patch, data: { confirm: '本当に削除しますか？' }, class: "btn btn-outline-danger py-0" %></td>
                <% else %>
                  <td><%= "削除済み" %></td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>

    </div>
  </div>
</div>
